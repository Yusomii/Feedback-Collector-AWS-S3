{
    "compilerOptions": {
        "target": "es2022",                  // Target modern JS for Node.js 18.x
        "module": "commonjs",                // Use CommonJS modules (for require())
        "moduleResolution": "node",          // How modules are resolved
        "esModuleInterop": true,             // Enable __esModuleInterop for require/import mix
        "forceConsistentCasingInFileNames": true, // Good practice
        "strict": true,                      // Enable all strict type-checking options (good practice)
        "skipLibCheck": true,                // Skip type checking of declaration files
        "outDir": "./dist",                  // Where to output compiled JS (if you use TS)
        "rootDir": "./",                     // Root directory for source files
        "resolveJsonModule": true            // Allows importing JSON files
    },
    // Include the files that VS Code should analyze. Adjust paths as needed.
    // For pure JS, this helps VS Code understand your project.
    "include": [
        "backend/lambda-functions/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "**/*.test.js"
    ]
}